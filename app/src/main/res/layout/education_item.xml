<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ShowCvDetails">
    <ScrollView
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:elevation="30dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center_horizontal|center_vertical"
                app:cardBackgroundColor="@color/black"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:gravity="start"
                        android:textSize="20dp"
                        android:text="Institute:"/>
                    <TextView
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:id="@+id/txtInstituteName"
                        android:gravity="start"
                        android:textSize="20dp"
                        android:text="Arid Agriculture"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_marginTop="6dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:gravity="start"
                        android:textSize="20dp"
                        android:text="Degree:"/>
                    <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:textColor="@color/white"
                        android:id="@+id/txtDegree"
                        android:textSize="15dp"
                        android:text="BSCS 4 Years"/>
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginTop="6dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="start"
                            android:textSize="13dp"
                            android:text="Total Marks:"/>
                        <TextView
                            android:layout_weight="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:textColor="@color/white"
                            android:id="@+id/txtTotalMarks"
                            android:textSize="15dp"
                            android:text="1100"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginTop="6dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="start"
                            android:textSize="13dp"
                            android:text="Obtained Marks:"/>
                        <TextView
                            android:layout_weight="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:textColor="@color/white"
                            android:id="@+id/txtObtMarks"
                            android:textSize="15dp"
                            android:text="990"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="10"
                        android:layout_marginTop="6dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="start"
                            android:textSize="13dp"
                            android:text="Percentage:"/>
                        <TextView
                            android:layout_weight="3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:textColor="@color/white"
                            android:id="@+id/txtPercentage"
                            android:textSize="15dp"
                            android:text="90%"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"
                        android:id="@+id/txtDescription"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="Description: I have obtained good marks "/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"
                        android:id="@+id/txtEducationDate"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:text="Duration: 2017/2/2 - 2021/2/7"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/white"
                            android:id="@+id/btnDelete"
                            android:layout_gravity="end"
                            android:textStyle="bold"
                            android:text="Delete"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/white"
                            android:id="@+id/btnUpdate"
                            android:layout_gravity="end"
                            android:textStyle="bold"
                            android:text="Update"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>